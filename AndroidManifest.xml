<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mineseeker.UI"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity 
            android:name="com.example.mineseeker.UI.SplashActivity" 
            android:label="@string/title_activity_splash"
            android:configChanges="keyboardHidden|orientation|screenSize">
          <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.mineseeker.UI.GameActivity"
            android:label="@string/title_activity_game" 
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            android:name="com.example.mineseeker.UI.OptionActivity"
            android:label="@string/title_activity_option"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            android:name="com.example.mineseeker.UI.HelpActivity"
            android:label="@string/title_activity_help"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            android:name="com.example.mineseeker.UI.MenuActivity"
            android:label="@string/title_activity_menu"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
 
    </application>
	
</manifest>
